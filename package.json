{
  "name": "hauskat-mission-control",
  "version": "4.5.0",
  "description": "Hauskat Mission Control - Native Mac Application",
  "main": "dist-electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build && electron-builder",
    "preview": "vite preview",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "vite build && electron-builder",
    "package": "vite build && electron-builder --mac",
    "icon:help": "node generate-icon.cjs"
  },
  "keywords": ["electron", "react", "hauskat", "mission-control"],
  "author": "Hauskat",
  "license": "MIT",
  "dependencies": {
    "electron-store": "^8.1.0",
    "lucide-react": "^0.309.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "vite": "^5.0.10",
    "vite-plugin-electron": "^0.28.1",
    "vite-plugin-electron-renderer": "^0.14.5",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.hauskat.missioncontrol",
    "productName": "Hauskat Mission Control",
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "public/icon.png",
      "target": ["dmg", "zip"]
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "directories": {
      "buildResources": "public",
      "output": "release"
    }
  }
}
