{
  "appId": "com.hauskat.missioncontrol",
  "productName": "Hauskat Mission Control",
  "artifactName": "${productName}-${version}-${arch}.${ext}",
  "directories": {
    "output": "release",
    "buildResources": "public"
  },
  "files": [
    "dist/**/*",
    "dist-electron/**/*",
    "public/**/*"
  ],
  "publish": {
    "provider": "github",
    "owner": "milliecat",
    "repo": "hauskat-mission-control"
  },
  "mac": {
    "category": "public.app-category.productivity",
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      },
      {
        "target": "zip",
        "arch": ["x64", "arm64"]
      }
    ],
    "icon": "public/icon.icns",
    "darkModeSupport": true
  },
  "dmg": {
    "contents": [
      {
        "x": 130,
        "y": 220
      },
      {
        "x": 410,
        "y": 220,
        "type": "link",
        "path": "/Applications"
      }
    ]
  }
}
