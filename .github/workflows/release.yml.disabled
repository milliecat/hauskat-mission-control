name: Build and Release

on:
  push:
    tags:
      - 'v*.*.*'  # Triggers on version tags like v4.5.0, v4.6.0, etc.

permissions:
  contents: write  # Required to create releases

jobs:
  release:
    runs-on: macos-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '20'
          cache: 'npm'

      - name: Install dependencies
        run: npm ci

      - name: Build app (without publish)
        run: npm run electron:build
        env:
          GH_TOKEN: ${{ secrets.GITHUB_TOKEN }}

      - name: Fix latest-mac.yml file names
        run: |
          cd release
          # Replace hyphens with dots in the yml file to match actual file names
          sed -i '' 's/Hauskat-Mission-Control/Hauskat.Mission.Control/g' latest-mac.yml
          cat latest-mac.yml

      - name: Upload artifacts
        uses: actions/upload-artifact@v4
        with:
          name: release-builds
          path: |
            release/*.dmg
            release/*.zip
            release/*.yml
          retention-days: 5

      - name: Create GitHub Release
        uses: softprops/action-gh-release@v1
        with:
          files: |
            release/*.dmg
            release/*.zip
            release/latest-mac.yml
          draft: false
          prerelease: false
          generate_release_notes: true
        env:
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}

      - name: Cleanup
        run: |
          echo "Release complete!"
          echo "Version: ${{ github.ref_name }}"
